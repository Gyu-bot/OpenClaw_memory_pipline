{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["accepted", "rejected"],
  "properties": {
    "accepted": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "canonical_key", "value", "confidence", "ttl_days"],
        "properties": {
          "type": {"type": "string", "enum": ["preference", "profile", "project_state", "task_rule"]},
          "canonical_key": {"type": "string"},
          "value": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1},
          "ttl_days": {"type": ["integer", "null"], "minimum": 1}
        },
        "additionalProperties": false
      }
    },
    "rejected": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["reason", "item"],
        "properties": {
          "reason": {"type": "string"},
          "item": {"type": "object"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
