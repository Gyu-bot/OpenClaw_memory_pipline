{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["normalized"],
  "properties": {
    "normalized": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "canonical_key", "value", "confidence"],
        "properties": {
          "type": {"type": "string", "enum": ["preference", "profile", "project_state", "task_rule"]},
          "canonical_key": {"type": "string", "minLength": 1},
          "value": {"type": "string", "minLength": 1},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
